
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"

    tools:context="com.example.admin.myapp.MainActivity"
    android:background="#62ece5">


    <!-- view for AdMob Interstitial Ad -->


    <EditText
        android:id="@+id/name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:inputType="textCapWords"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:text="Toppings"
        android:textColor="@android:color/black"
        android:textAllCaps="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whipped cream"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/whippedCreamcheckBox"
        android:background="#eed8d6" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chocolate"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/chocolatecheckBox"
        android:background="#f1e1e1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="Quantity"
        android:textColor="@android:color/black"
        android:textAllCaps="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Subtract"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:onClick="decrement"
            android:text="-"
            android:background="#be1414" />


        <TextView
            android:id="@+id/Quantity_Text_View"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/Add"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:onClick="increment"
            android:text="+"
            android:background="#3df41c" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="ORDER SUMMARY"
        android:textAllCaps="true"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/order_summarytextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="R0"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:onClick="submitOrder"
        android:text="Order"
        android:background="#30e930" />
</LinearLayout>
